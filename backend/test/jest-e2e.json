{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules", "dist"],
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/$1"
  }
}
